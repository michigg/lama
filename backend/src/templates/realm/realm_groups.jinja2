{% extends 'realm/realm_detailed.jinja2' %}

{% block detail_content %}
    <h3>Gruppen</h3>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Ldap Domain</th>
            <th scope="col">Mitgliederanzahl</th>
        </tr>
        </thead>
        <tbody>
        {% for group in realm_groups %}
            <tr>
                <td><a href="{{ url('realm-group-detail', args=[realm.id, group.dn]) }}"
                       data-toggle="tooltip"
                       data-placement="right"
                       title="{{ group.description }}"
                >{{ group.name }}</a>
                </td>
                <td>{{ group.dn }}</td>
                <td>{{ group.members|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ url('realm-group-add', args=[realm.id]) }}" class="btn btn-primary"><i class="far fa-plus-square"></i>
        Gruppen hinzuf√ºgen</a>
{% endblock %}
