    </div>
{% endmacro %}

{% macro select_input(field, multiple=False) -%}
    <div class="form-group">
        <label for="{{ field.id_for_label }}">{{ field.label }}</label>
        <select
                {% if multiple %}multiple{% endif %}
                class="form-control"
                id="{{ field.id_for_label }}"
                name="{{ field.html_name }}">
            {% for option in field %}
                {{ option }}
            {% endfor %}
        </select>
    </div>
{% endmacro %}

